<div class="container">
  <div class="text-center">
    <br><br><br>
    <h1><%= @bookmark.url %></h1>
    <div class="row">
      <%= render partial: 'likes/like', locals: {topic: @bookmark.topic, bookmark: @bookmark } %>
    </div>
    <br>
    <%= link_to "Edit", edit_topic_bookmark_path, class: "btn btn-primary" %>
    <%= link_to "Delete", [@bookmark.topic, @bookmark], method: :delete, class: "btn btn-danger", data: {confirm: 'Are you sure you want to delete this topic?' } %>
  </div>
</div>
