<div class="container">
  <div class="text-center">
    <br><br><br>
    <div class="thumbnail">
      <% thumb = @bookmark.thumbnail_url.present? ? "<img src='#{@bookmark.thumbnail_url}'/>".html_safe : image_tag("default_thumbnail.png") %>
      <%= link_to thumb, "http://#{@bookmark.url}" %>
      <div class="caption">
        <h3><%= link_to @bookmark.url, "http://#{@bookmark.url}" %></h3>
        <%= render partial: 'likes/like', locals: { bookmark: @bookmark } %>
      </div>
      <br>
      <% if @bookmark.user == current_user || current_user.admin? %>
        <%= link_to "Edit", edit_topic_bookmark_path, class: "btn btn-primary" %>
        <%= link_to "Delete", [@bookmark.topic, @bookmark], method: :delete, class: "btn btn-danger", data: {confirm: 'Are you sure you want to delete this topic?' } %>
      <% end %>
      <br>
    </div>
  </div>
</div>
