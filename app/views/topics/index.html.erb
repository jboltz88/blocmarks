<div class="container">
  <h1>All Blocmarks</h1>
  <%= link_to "New Topic", new_topic_path, class: "btn btn-primary" %>
  <br>
  <% @topics.each do |topic| %>
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
          <%= link_to topic.title, topic %>
          <div class="row">
            <h6 class="media-heading">
              <br>
              <% topic.bookmarks.each do |bookmark| %>
                <div class="col-md-3">
                  <%= bookmark.url%>
                </div>
              <% end %>
            </h6>
          </div>
        </h4>
      </div>
    </div>
  <% end %>
</div>
